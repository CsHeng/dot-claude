{
	"scripts": {
		"lint:md": "remark . --frail --ext .md",
		"lint:md:strict": "remark . --frail --ext .md --quiet",
		"lint:md:fix": "remark . --ext .md --output",
		"lint:md:fix:strict": "remark . --ext .md --output --quiet",
		"lint:md:report": "remark . --ext .md --quiet --output report.json && cat report.json | jq '.statistics'",
		"lint:md:summary": "node tools/optimized-lint-summary.mjs",
		"lint:md:quick": "remark . --frail --ext .md --quiet --ignore-path .remarkignore",
		"check:md:health": "npm run lint:md:report && npm run lint:md:summary"
	},
	"devDependencies": {
		"emoji-regex": "^10.6.0",
		"mdast-util-to-string": "^4.0.0",
		"minimatch": "^10.1.1",
		"remark": "^15.0.1",
		"remark-cli": "^12.0.1",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.1",
		"remark-lint": "^10.0.1",
		"remark-preset-lint-recommended": "^7.0.1",
		"unified": "^11.0.5",
		"unified-lint-rule": "^3.0.1",
		"unist-util-visit": "^5.0.0",
		"unist-util-visit-parents": "^6.0.2"
	}
}
